extends layout

block content
	h1
		a.text-warning.audio-twitch-h1(href='/') Auditory
	.container
		.row
			.col-sm-4.col-sm-offset-4
				form(action='/', method='POST', id='streamForm')
					.input-group
						input#streamSearch.form-control(type='text', name='streamer', placeholder='Streamer')
						#illegalChr
							span Illegal character 
						span.input-group-btn
							button.btn.btn-default(type='submit', id='streamBtn') Search	
		.row
			.col-sm-4.col-sm-offset-4
				#placeHolder.playerControls
					.testing
						button(id='play', type='submit').btn-xs 
							i.fa.fa-play
						button(id='pause', type='submit').btn-xs
							i.fa.fa-pause
						button(id='mute', type='submit').btn-xs
							i.fa.fa-volume-off
						button(id='volumeDown', type='submit').btn-xs
							i.fa.fa-volume-down
						button(id='volumeUp', type='submit').btn-xs
							i.fa.fa-volume-up
						button(id='chatToggle', type='submit').btn-xs
							i.fa.fa-comments
					#streamInfo
						span #{onOff} #{stream} #{status}
				#{iframe}#chat_embed(frameborder='0', scrolling='no', src='http://www.twitch.tv/#{stream}/chat', height='500', width='360')
			.col-sm-4.playNo
				script(src='http://player.twitch.tv/js/embed/v1.js')
				div(id='PLAYER_DIV_ID')
				script.
					var options = {
					width: 500,
					height: 350,
					channel: "#{stream}"
					};
					var player = new Twitch.Player("PLAYER_DIV_ID", options);
					player.setVolume(0.5);
					player.setQuality("mobile");	

			
				
								
	


